	},
	"files": [
		"index.js",
		"index.html",
		"index.css"
	],
	"keywords": [
		"electron-app",
		"electron"
	],
	"dependencies": {
		"body-parser": "^1.15.0",
		"cookie-parser": "^1.4.0",
		"debug": "^2.2.0",
		"ejs": "^2.3.1",
		"electron-debug": "^1.0.0",
		"express": "^4.13.4",
		"morgan": "^1.7.0",
		"node-sass": "^3.6.0",
		"serve-favicon": "^2.3.0"
	},
	"devDependencies": {
		"bower": "^1.7.7",
		"devtron": "^1.1.0",
		"electron-packager": "^8.0.0",
		"electron": "^1.3.3",
		"js-beautify": "^1.6.2",
		"jshint": "^2.9.1"
	},
	"scripts": {
		"start": "node app",
		"start_app": "electron .",
		"build": "electron-packager . --out=dist --asar --overwrite --all",
		"libs": "bower install",
		"sass": "node-sass public/style/scss/*.scss -o public/style/css",
		"postinstall": "npm run libs && npm run sass",
		"beautify": "js-beautify --indent-with-tabs --brace-style collapse -r *.js app/*.js public/js/*.js *.json",
		"jshint": "jshint *.js app/*.js public/js/*.js *.json"
	},
	"xo": {
		"esnext": true,
		"envs": [
			"node",
			"browser"
		]
	}
}
